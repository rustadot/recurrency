{
  "env": {
    "shared-node-browser": true
  },
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
},
  "plugins": [
    "prettier",
    "mocha",
    "import"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:mocha/recommended",
    "prettier"
  ],
  "rules": {
    "semi": [
      "error",
      "always"
    ],
    "quotes": [
      "error",
      "double",
      {
        "avoidEscape": true
      }
    ],
    "import/extensions": ["error", "always"],
    "prettier/prettier": "error",
    "no-use-before-define": "off",
    "no-unused-vars": "off",
    "no-var": "error",
    "id-length": [
      "error",
      {
        "exceptionPatterns": [
          "[i-k]",
          "e",
          "c",
          "x",
          "y",
          "r",
          "s",
          "v"
        ],
        "properties": "never"
      }
    ],
    "allow-namespace": "off",
  }
}
