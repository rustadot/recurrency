{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmit": false,
        "noImplicitAny": true,
        "outDir": "dist",
        "resolveJsonModule": true,
        "sourceMap": false,
        "strict": true,
        "skipLibCheck": true,
        "target": "ESNext",
        "watch": false,
        "typeRoots": [
            "node_modules/@types",
        ],
        "paths": {
            "@dsnp/frequency-api-augment/*": [
                "./interfaces/*"
            ]
        }
    },
    "exclude": ["node_modules/**", "./test/**", "./scripts/**", "**/*.test.ts", "./dist/**"],
}
